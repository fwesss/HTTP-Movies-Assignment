{
  "name": "client",
  "version": "0.1.0",
  "private": true,
  "repository": "https://github.com/fwesss/HTTP-Movies-Assignment.git",
  "author": "Westley Feller <feller.westley@gmail.com>",
  "scripts": {
    "build": "react-scripts build",
    "build:serve": "serve --no-clipboard --single --listen 3000 build",
    "check-format": "yarn run prettier --list-different",
    "eject": "react-scripts eject",
    "format": "yarn run prettier --write && stylelint --ignore-path .gitignore --fix \"**/*.+(css|jsx)\"",
    "lint": "eslint --ignore-path .gitignore --ext .js,.jsx .",
    "prettier": "prettier \"**/*.+(js|jsx|json)\"",
    "start": "react-scripts start",
    "test": "react-scripts test --env=jsdom",
    "validate": "npm-run-all --parallel check-format lint"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn run lint-staged"
    }
  },
  "lint-staged": {
    "**/*.+(js|jsx|json)": [
      "prettier --write",
      "git add"
    ],
    "*.+(js|jsx)": [
      "eslint"
    ],
    "package.json": [
      "sort-package-json",
      "git add"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "stylelint": {
    "extends": [
      "stylelint-prettier/recommended",
      "stylelint-config-rational-order"
    ],
    "plugins": [
      "stylelint-order"
    ]
  },
  "dependencies": {
    "@chakra-ui/core": "^0.5.1",
    "@emotion/core": "^10.0.22",
    "@emotion/styled": "^10.0.23",
    "axios": "^0.19.0",
    "emotion-theming": "^10.0.19",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "react-router-dom": "^5.1.2",
    "react-scripts": "^3.3.0"
  },
  "devDependencies": {
    "@types/react-router-dom": "^5.1.3",
    "eslint": "^6.7.2",
    "eslint-config-airbnb": "^18.0.1",
    "eslint-config-prettier": "^6.7.0",
    "eslint-plugin-import": "^2.19.1",
    "eslint-plugin-json-format": "^2.0.1",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-optimize-regex": "^1.1.7",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-react": "^7.17.0",
    "eslint-plugin-react-hooks": "^2.3.0",
    "husky": "^3.1.0",
    "lint-staged": "^9.5.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.19.1",
    "sort-package-json": "^1.31.0",
    "stylelint": "^12.0.0",
    "stylelint-config-prettier": "^8.0.0",
    "stylelint-config-rational-order": "^0.1.2",
    "stylelint-order": "^3.1.1",
    "stylelint-prettier": "^1.1.2"
  }
}
